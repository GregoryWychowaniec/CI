<%- include('_layout/header'); -%>



  <nav class="blue accent-3" role="navigation">
    <div class="nav-wrapper container"><a id="logo-container" href="#" class="brand-logo">PiZZima</a>
      <ul class="right hide-on-med-and-down">
        <li><a href="#">Menu</a></li>
      </ul>

      <ul id="nav-mobile" class="sidenav">
        <li><a href="#">Menu</a></li>
      </ul>
      <a href="#" data-target="nav-mobile" class="sidenav-trigger"><i class="material-icons">menu</i></a>
    </div>
  </nav>
  <div class="section no-pad-bot" id="index-banner">
    <div class="container">
      <br><br>
      <h1 class="center blue-grey-text darken-2-text">
        BDE Isima
        <br>
        <br>
      <img id="bde" src="https://bde.isima.fr/images/logo.png"/>
      </h1>
      <br>
    </div>
  </div>


  <div class="container">
    <div class="section">

      <!--   Icon Section   -->
      <div class="row">

      <% for(var i=0; i<pizza.length; i++){ %>
        <div class="col s12 m4">
          <div class="icon-block">
            <h2 class="center light-blue-text"><img class="responsive-img" src=<%= pizza[i].image %>/></h2>
            <h5 class="center">
              <%= pizza[i].nom %>
            </h5>
            
            <p class="light">
            Ingrédients : <%= pizza[i].ingredients %>
            <br>
            Prix TTC : <%= pizza[i].prix %> €
            

              <br>
              <i class="large right material-icons">add</i>
            </p>
          </div>
          
        </div>
     <% }%>

    </div>
    <br><br>
  </div>


<div class="row">
    <form class="col s12" method="post">
      <div class="row">
        <div class="input-field col s6">
          <input placeholder="Placeholder" id="nompizza" name="nompizza" type="text" class="validate">
          <label for="nompizza">Nom pizza</label>
        </div>
        <div class="input-field col s6">
          <input name="ingredients" id="ingredients" type="text" class="validate">
          <label for="ingredients">Ingédients</label>
        </div>
        <div class="input-field col s6">
          <input name="image" id="image" type="text" class="validate">
          <label for="image">Image</label>
        </div>
        <div class="input-field col s6">
          <input name="prix" id="prix" type="text" class="validate">
          <label for="prix">Prix</label>
        </div>
        <button class="btn waves-effect waves-light" type="submit" name="action">Ajouter
          <i class="material-icons right">send</i>
        </button>
      </div>
    </form>
  </div>


  <footer class="page-footer red accent-3">
    <div class="container">
      <div class="row">
        <div class="col l6 s12">
          <h5 class="white-text">Partenaire dominos</h5>
          <p class="grey-text text-lighten-4">Aller commander chez Dominos plutôt que chez nous, ça nous fait moins de travail.</p>


        </div>
        <div class="col l3 s12">
          <h5 class="white-text">Settings</h5>
          <ul>
            <li><a class="white-text" href="https://www.dominos.fr/la-carte">Link 1</a></li>
            <li><a class="white-text" href="https://www.dominos.fr/la-carte">Link 2</a></li>
            <li><a class="white-text" href="https://www.dominos.fr/la-carte">Link 3</a></li>
          </ul>
        </div>
        <div class="col l3 s12">
          <h5 class="white-text">Connect</h5>
          <ul>
            <li><a class="white-text" href="#!">Link 1</a></li>
            <li><a class="white-text" href="#!">Link 2</a></li>
            <li><a class="white-text" href="#!">Link 3</a></li>
            <li><a class="white-text" href="#!">Link 4</a></li>
          </ul>
        </div>
      </div>
    </div>
    <div class="footer-copyright">
      <div class="container">
      Made by <a class="orange-text text-lighten-3" href="http://materializecss.com">Materialize</a>
      </div>
    </div>
  </footer>


